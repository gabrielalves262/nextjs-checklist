generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model CheckListItem {
  id          String          @id @default(uuid())
  description String          @db.Text
  checked     Boolean         @default(false)
  parentId    String?         @map("parent_id")
  parent      CheckListItem?  @relation(fields: [parentId], references: [id], onDelete: Cascade, name: "parent")
  childrens   CheckListItem[] @relation(name: "parent")
  createdAt   DateTime        @default(now()) @map("created_at") @db.Timestamp()
  updatedAt   DateTime        @default(now()) @updatedAt @map("updated_at") @db.Timestamp()

  @@map("checklist_items")
}
